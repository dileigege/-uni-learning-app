.uni-margin-wrap {
  width: 700rpx;
  margin: 0 30rpx;
}
.uni-margin-wrap .swiper {
  height: 460rpx;
}
.uni-margin-wrap .swiper .swiper-item {
  position: absolute;
  display: block;
  background-color: #FFFFFF;
}
.uni-margin-wrap .swiper .swiper-item .activity-title {
  background-color: #f96029;
  color: #FFFFFF;
  padding: 10rpx 35rpx;
  width: 630rpx;
  border-radius: 15rpx 15rpx 0 0;
}
.uni-margin-wrap .swiper .swiper-item .activity-title .title {
  font-size: 38rpx;
  font-weight: 800;
}
.uni-margin-wrap .swiper .swiper-item .activity-title .text {
  padding-top: 15rpx;
}
.uni-margin-wrap .swiper .swiper-item .activity-title .text .fontsize1 {
  font-size: 22rpx;
  font-weight: 600;
}
.uni-margin-wrap .swiper .swiper-item .activity-title .text .fontsize2 {
  font-size: 60rpx;
  font-weight: 600;
  color: #fff512;
  vertical-align: text-top;
  padding: 15rpx;
}
.uni-margin-wrap .swiper .swiper-item .activity-title .text .fontsize3 {
  font-size: 22rpx;
  font-weight: 600;
  color: #fff512;
}
.uni-margin-wrap .swiper .swiper-item .activity-title .button {
  background-color: #fff512;
  display: inline-block;
  padding: 15rpx 45rpx;
  border-radius: 45rpx;
  color: #6d3e1c;
  font-size: 20rpx;
  position: absolute;
  top: 55rpx;
  right: 15rpx;
}
.uni-margin-wrap .swiper .swiper-item .activity-content {
  background-color: #FFFFFF;
}
.uni-margin-wrap .swiper .swiper-item .activity-content .Avatar {
  padding: 15rpx 35rpx;
  padding-right: 25rpx;
  display: inline-block;
}
.uni-margin-wrap .swiper .swiper-item .activity-content .Avatar .img {
  width: 55rpx;
  height: 55rpx;
  border-radius: 50%;
  border: 1px #f96029 solid;
  margin-left: -15rpx;
  vertical-align: middle;
}
.uni-margin-wrap .swiper .swiper-item .activity-content .Avatar .text {
  padding-left: 15rpx;
  font-size: 20rpx;
  line-height: 55rpx;
  vertical-align: middle;
  color: #666666;
  padding-right: 15rpx;
  border-right: 1rpx #c7c7c7 solid;
}
.uni-margin-wrap .swiper .swiper-item .activity-content .text {
  font-size: 30rpx;
  font-weight: 600;
  color: #333333;
}
.uni-margin-wrap .swiper .swiper-item .activity-content .textFontsize {
  font-size: 35rpx;
  font-weight: 700;
  color: #6D3E1C;
  background-color: #E5E5E5;
  padding: 10rpx;
  margin: 10rpx;
}
.uni-margin-wrap .swiper .swiper-item .activity-content .Countdown {
  display: inline-block;
  border-radius: 45rpx;
  color: #999999;
  margin-top: 10rpx;
  margin-bottom: 20rpx;
  width: 100%;
}
.uni-margin-wrap .swiper .swiper-item .activity-content .Countdown .example-liter {
  font-size: 30rpx;
  line-height: 60rpx;
  margin-left: 20rpx;
  float: left;
}
.uni-margin-wrap .swiper .swiper-item .activity-content .Countdown .example-body {
  float: left;
}
.uni-margin-wrap .swiper .swiper-list {
  margin-top: 40rpx;
  margin-bottom: 0;
}

