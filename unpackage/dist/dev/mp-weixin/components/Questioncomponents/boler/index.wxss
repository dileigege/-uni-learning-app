.boler {
  position: relative;
}
.boler .answer {
  position: absolute;
  top: 20rpx;
  right: -24rpx;
  background-color: #007AFF;
  color: #FFFFFF;
  padding: 8rpx 15rpx;
  border-radius: 50rpx 0  0 50rpx;
  line-height: 30rpx;
}
.boler .user {
  padding-bottom: 10rpx;
}
.boler .user .HeadPortrait .img {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50rpx;
  margin: 15rpx;
  vertical-align: middle;
}
.boler .user .HeadPortrait .name {
  vertical-align: middle;
  font-size: 20rpx;
}
.boler .user .userButton {
  font-size: 28rpx;
  margin-right: 10rpx;
  margin-top: 15rpx;
}
.boler .user .userButton .Icon {
  font-size: 30rpx;
  margin-right: 10rpx;
}
.boler .content {
  border-top: 2rpx solid #f1f1f1;
}
.boler .content .title {
  font-size: 30rpx;
  font-weight: 600;
  padding-top: 15rpx;
}
.boler .content .lerImage {
  margin: 10rpx;
  height: 150rpx;
  border-radius: 5rpx;
}
.boler .content .nevin {
  font-size: 24rpx;
  color: #101010;
}

